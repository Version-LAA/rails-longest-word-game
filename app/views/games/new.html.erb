<div class="container mt-3">
  <h1>Welcome to the Longest Game</h1>
  <div class="board">
    <ul class="parent">
      <%@letters.each do |letter|%>
        <li><%=letter%></li>
      <%end%>
    <ul>
  </div>
  <p> What is the longest word you can find?</p>
  <div class="forms">
    <form action="/score" method="post" data-turbo="false" class="input-group">
      <input  class="form-control" type="text" name="word" id="word">
      <input class="btn btn-outline-secondary btn-primary" id="button-addon2" type="submit" value="play">
    </form>
    <%# <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </div>
</div>
